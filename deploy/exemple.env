# Django Core
SECRET_KEY=your-secret-key
DEBUG=False
ALLOWED_HOSTS=infantinho3.seudominio.com,localhost,127.0.0.1

# Database (PostgreSQL)
DB_NAME=infantinho3
DB_USER=infantinho3
DB_PASSWORD=your-db-password
DB_HOST=localhost
DB_PORT=5432

# Email Configuration
EMAIL_HOST=smtp.office365.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=seu-email
EMAIL_HOST_PASSWORD=sua-senha
DEFAULT_FROM_EMAIL=webmaster@localhost # Ou o seu email de remetente padrão

# Static and Media Files
STATIC_URL=/static/
STATIC_ROOT=/var/www/infantinho3/static/
MEDIA_URL=/media/
MEDIA_ROOT=/var/www/infantinho3/media/

# Azure AD Authentication
AZURE_AD_CLIENT_ID=your-azure-ad-client-id
AZURE_AD_CLIENT_SECRET=your-azure-ad-client-secret
AZURE_AD_TENANT_ID=your-azure-ad-tenant-id
AZURE_AD_REDIRECT_URI=https://infantinho3.seudominio.com/users/microsoft/callback # Verifique este URI
AZURE_AD_AUTHORITY=https://login.microsoftonline.com/your-azure-ad-tenant-id # Ou o URL completo da sua autoridade

# AI Services
AI_SERVICE_PROVIDER=ollama # 'openai' | 'google-vertex' | 'ollama'
AI_DEFAULT_MODEL=llama3.1  # Ex.: gpt-5, gpt-5-mini, llama3.1
AI_FAKE_RESPONSES=False    # True para respostas simuladas em desenvolvimento

# OpenAI (quando AI_SERVICE_PROVIDER=openai)
OPENAI_API_KEY=your-openai-key
OPENAI_API_BASE=https://api.openai.com/v1

# Google Vertex (quando AI_SERVICE_PROVIDER=google-vertex)
GOOGLE_VERTEX_PROJECT=your-google-vertex-project-id
GOOGLE_VERTEX_LOCATION=europe-west1
GOOGLE_VERTEX_API_KEY=
GOOGLE_VERTEX_API_BASE=
GOOGLE_APPLICATION_CREDENTIALS=/path/to/your/google-service-account-file.json # Caminho para o ficheiro de credenciais

# Ollama (quando AI_SERVICE_PROVIDER=ollama)
OLLAMA_API_BASE=http://localhost:11434
# Aceita JSON: {"num_ctx":4096} ou {"options":{"num_ctx":4096}}
OLLAMA_OPTIONS={"num_ctx":4096}

# Mapeamento de modelos por persona (sobrepõe heurística automática)
# Valores aceites: qualquer modelo disponível no provider ativo (OpenAI/Ollama/Vertex)
AI_MODEL_STUDENT=
AI_MODEL_TEACHER=
AI_MODEL_GUARDIAN=
AI_MODEL_ADMIN=
AI_MODEL_STAFF=

# Configuração por níveis (tiers)
# Define os modelos a usar para cada tier semântico (heurística do router):
# - nano   → mais barato/rápido; fallback geral quando não há intenção específica
# - mini   → usado para intenções de "feedback_curto" e "orientacao_imediata" e por defeito para alunos (student)
# - normal → usado para intenções de "planeamento_prolongado", "analise_dados" e "conselho_complexo"
# Pode sempre sobrepor por persona com AI_MODEL_* (ver secção acima)
AI_MODEL_TIER_NANO=gpt-5-nano
AI_MODEL_TIER_MINI=gpt-5-mini
AI_MODEL_TIER_NORMAL=gpt-5

# MEM guidance
MEM_ENABLE=True
# MEM_GUIDELINES pode ser uma linha longa; exemplo sugerido:
MEM_GUIDELINES=Princípios MEM: construtivismo social; cooperação; autonomia; participação democrática. Instrumentos: Checklists de Aprendizagens (autoavaliação/validação), PIT (planeamento individual), Projetos (trabalho cooperativo), Diário (reflexão/registo), Conselho (decisões coletivas). Ao responder: sugere próximos passos concretos (individual, em par/pequeno grupo, com professor/família), liga-os a um instrumento MEM adequado e usa linguagem clara e acolhedora (pt-PT).
AI_GUARD_STRICT=True
AI_ENFORCE_PT=True

# TinyMCE (Opcional, se usar a versão cloud com API Key)
# TINYMCE_API_KEY=your-tinymce-api-key

# Internationalization & Localization
LANGUAGE_CODE=pt-pt
TIME_ZONE=Europe/Lisbon

# Logging
LOG_LEVEL=INFO

# Application Specific (Se necessário)
# ADMIN_EMAIL_DOMAIN=seudominio.com # Domínio permitido para criação de admins via SSO, se implementado