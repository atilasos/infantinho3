# Django Core
SECRET_KEY=your-secret-key
DEBUG=False
ALLOWED_HOSTS=infantinho3.seudominio.com,localhost,127.0.0.1

# Database (PostgreSQL)
DB_NAME=infantinho3
DB_USER=infantinho3
DB_PASSWORD=your-db-password
DB_HOST=localhost
DB_PORT=5432

# Email Configuration
EMAIL_HOST=smtp.office365.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=seu-email
EMAIL_HOST_PASSWORD=sua-senha
DEFAULT_FROM_EMAIL=webmaster@localhost # Ou o seu email de remetente padrão

# Static and Media Files
STATIC_URL=/static/
STATIC_ROOT=/var/www/infantinho3/static/
MEDIA_URL=/media/
MEDIA_ROOT=/var/www/infantinho3/media/

# Azure AD Authentication
AZURE_AD_CLIENT_ID=your-azure-ad-client-id
AZURE_AD_CLIENT_SECRET=your-azure-ad-client-secret
AZURE_AD_TENANT_ID=your-azure-ad-tenant-id
AZURE_AD_REDIRECT_URI=https://infantinho3.seudominio.com/users/microsoft/callback # Verifique este URI
AZURE_AD_AUTHORITY=https://login.microsoftonline.com/your-azure-ad-tenant-id # Ou o URL completo da sua autoridade

# AI Services
AI_SERVICE_PROVIDER= # Pode ser 'OpenAI' ou 'GoogleVertexAI'
OPENAI_API_KEY=your-openai-key
GOOGLE_VERTEX_AI_PROJECT_ID=your-google-vertex-ai-project-id
GOOGLE_VERTEX_AI_LOCATION=your-google-vertex-ai-location # Ex: 'europe-west1'
GOOGLE_APPLICATION_CREDENTIALS=/path/to/your/google-service-account-file.json # Caminho para o ficheiro de credenciais

# TinyMCE (Opcional, se usar a versão cloud com API Key)
# TINYMCE_API_KEY=your-tinymce-api-key

# Internationalization & Localization
LANGUAGE_CODE=pt-pt
TIME_ZONE=Europe/Lisbon

# Logging
LOG_LEVEL=INFO

